{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "outDir": "dist"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false,
    "babelOptions": {
      "presets": ["es2015"],
      "plugins": [
        [
          "transform-runtime",
          {
            "polyfill": false,
            "regenerator": true
          }
        ]
      ]
    }
  },
  "exclude": ["node_modules", "static"]
}
